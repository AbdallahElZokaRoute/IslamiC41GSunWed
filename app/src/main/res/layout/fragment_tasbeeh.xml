<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/tasbeeh_bg">


    <ImageView
        android:id="@+id/tasbeeh_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:src="@drawable/islami_quran_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/sebe7a_head_image"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@drawable/seb7a_head_image"
        app:layout_constraintTop_toBottomOf="@id/tasbeeh_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:adjustViewBounds="true"
        android:layout_marginTop="32dp"
        />

    <ImageView
        android:id="@+id/seb7a_body_image"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/sebha_body_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sebe7a_head_image" />

    <TextView
        android:id="@+id/zekr_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="سبحان الله"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="@id/seb7a_body_image"
        app:layout_constraintStart_toStartOf="@id/seb7a_body_image"
        app:layout_constraintEnd_toEndOf="@id/seb7a_body_image"/>
    <TextView
        android:id="@+id/zekr_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="30"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@id/zekr_text"
        app:layout_constraintStart_toStartOf="@id/seb7a_body_image"
        app:layout_constraintEnd_toEndOf="@id/seb7a_body_image"/>
    <TextView
        android:id="@+id/zekr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="30"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="80dp"

        app:layout_constraintStart_toStartOf="@id/seb7a_body_image"
        app:layout_constraintEnd_toEndOf="@id/seb7a_body_image"/>



</androidx.constraintlayout.widget.ConstraintLayout>